        <input type="radio" name="options" autocomplete="off"> Your Own
      {{/link-to}}-->
    {{#link-to "proposals.finished" tagName="label" id="grantsFinished" class="btn btn-default" href=false}}
      <input type="radio" name="options" autocomplete="off"> Finished
    {{/link-to}}
  </div>
</div>
