<div>
  <h4>Proposals</h4>
  <table class="table table-striped">
    <!--    <caption>Running Small Grant Proposals</caption>-->
    <thead>
      <tr>
        <th>Title</th>
        <th>Amount</th>
        <th>Recipient</th>
        <th>Starts</th>
        {{#if (eq currentUser.user.id "1")}}
          <th>Moderated</th>
        {{/if}}
        <th class="text-right">Votes</th>
        <th class="text-right">Vetos</th>
      </tr>
    </thead>
    <tbody>
      {{#each smallGrantProposals as |proposal|}}
        <tr>
          <td>{{#link-to "proposals.show" proposal.id}}{{proposal.title}}{{/link-to}}</td>
          <td>{{format-money proposal.value}}</td>
          <td>{{proposal.recipient}}</td>
          <td>{{moment-from-now proposal.starts}}</td>
          {{#if (eq currentUser.user.id "1")}}
            {{#if (eq proposal.moderated true)}}
              <td>Yes</td>
            {{else}}
              <td><b>No</b></td>
            {{/if}}
          {{/if}}
          <td class="text-right">{{proposal.votes}}</td>
          <td class="text-right">{{proposal.vetos}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  {{activeSmallGrantCount}} grant proposals
  {{#if (eq currentUser.user.id "1")}}
    ({{inactiveSmallGrantCount}} awaiting moderation)
  {{/if}}
</div>

